<configuration scan="true">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- If this file is specified, the current log will be written here. Only 
			at rollover time, the fileNamePattern is applied. -->
		<file>log/semedico-app.${HOSTNAME}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>log-archive/semedico-app.${HOSTNAME}.%d{yyyy-MM-dd}.log
			</fileNamePattern>

			<!-- keep 14 days' worth of history -->
			<maxHistory>5</maxHistory>
		</rollingPolicy>

		<append>false</append>
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<logger name="de.julielab.jules.utils.jpaconversion.AnnotationConverter" level="INFO" />
<!-- 	<logger name="de.julielab.jules.consumer.ORMWriter" level="DEBUG" /> -->
	<logger name="de.julielab.jules.cpe.DBStatusCallbackListener" level="INFO" />
	<logger name="de.julielab.jules.ae.TermVariantsExtractor" level="INFO" />
<!-- 	<logger name="de.julielab.jules.consumer.elasticsearch.AbstractCasToJsonConsumer" level="DEBUG" /> -->
<!-- 	<logger name ="de.julielab.semedico.ae.TokenSplitter" level ="DEBUG" /> -->
<!-- 	<logger name="de.julielab.jules.reader.DBCasXmiReader" level="TRACE" /> -->
	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
</configuration>