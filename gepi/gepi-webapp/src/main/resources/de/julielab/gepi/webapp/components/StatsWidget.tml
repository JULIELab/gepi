<!DOCTYPE html>
<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter" t:type="gepiwidgetlayout"
     widgettitle="Result Statistics" t:clientId="stats_widget" class="${classes}" sizeClass="widget-large"
     esResult="esResult"
     viewMode="viewMode" useTapestryZoneUpdates="false" requestData="requestData" downloadable="true"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="tapestry:parameter ">
    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Result statistics</h5>
                    <table class="table">
                        <tr>
                            <th>Number unique A-genes</th>
                            <td><span class="badge text-bg-primary">${numberUniqueASymbols}</span></td>
                        </tr>
                        <tr>
                            <th>Number unique B-genes</th>
                            <td><span class="badge text-bg-primary">${numberUniqueBSymbols}</span></td>
                        </tr>
                        <tr>
                            <th>Number unique A-B gene pairs</th>
                            <td><span class="badge text-bg-primary">${numberUniqueABPairs}</span></td>
                        </tr>
                        <tr>
                            <th>Total number of interactions</th>
                            <td><span class="badge text-bg-primary">${numEvents}</span></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Top Interactions</h5>
                    <table class="table">
                        <tr>
                            <th>A-argument</th>
                            <th>B-argument</th>
                            <th>count</th>
                        </tr>
                        <t:loop t:source="topInteractions" t:value="topInteractionsLoopItem">
                            <tr>
                                <td>${topInteractionsLoopItem.left}</td>
                                <td>${topInteractionsLoopItem.middle}</td>
                                <td><span class="badge text-bg-primary">${topInteractionsLoopItem.right}</span></td>
                            </tr>
                        </t:loop>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">A-list mapping <span class="badge text-bg-primary" title="Number of input items successfully converted to GePI gene entities" data-bs-toggle="default-tooltip">${getInputSize('a', 'converted')}</span>&nbsp;<span class="badge text-bg-danger" title="Number of input items that could not be converted to GePI gene entities" data-bs-toggle="default-tooltip">${getInputSize('a','unconverted')}</span></h5>
                    <table class="table">
                        <tr>
                            <th>input</th>
                            <th>recognized symbol</th>
                            <th>mapping type</th>
                        </tr>
                        <t:loop t:source="getaInputMapping(10)" value="inputMappingLoopItem">
                            <tr>
                                <th>${inputMappingLoopItem.input}</th>
                                <td class="${mappingFoundClass}">${inputMappingLoopItem.target}</td>
                                <td><span class="badge text-bg-primary">${inputMappingLoopItem.type}</span></td>
                            </tr>
                        </t:loop>
                    </table>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#alistmappingmodal">
                        See whole list
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="alistmappingmodal" tabindex="-1" aria-labelledby="alistmappingmodallabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="alistmappingmodallabel">A-List Input Mapping</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <tr>
                            <th>input</th>
                            <th>recognized symbol</th>
                            <th>mapping type</th>
                        </tr>
                        <t:loop t:source="getaInputMapping(-1)" value="inputMappingLoopItem">
                            <tr>
                                <th>${inputMappingLoopItem.input}</th>
                                <td class="${mappingFoundClass}">${inputMappingLoopItem.target}</td>
                                <td>${inputMappingLoopItem.type}</td>
                            </tr>
                        </t:loop>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>