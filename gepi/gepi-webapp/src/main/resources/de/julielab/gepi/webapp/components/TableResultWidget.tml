<!DOCTYPE html>
<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter" t:type="gepiwidgetlayout"
     widgettitle="Table View" t:clientId="tableresult_widget" class="${classes}" sizeClass="widget-large" esResult="esResult"
     viewMode="viewMode" useTapestryZoneUpdates="false" requestData="requestData" downloadable="true"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="tapestry:parameter ">

    <div>${viewmode}</div>

    <t:form t:id="filterCriteria" async="true" class="form-inline">

        <!-- On change of a Select, we do an javascript click of an invisible submit button.
            Note: do not use "this.form.performSubmit()" because on an AJAX Form it fails in Firefox. -->

<!--        <div class="form-group">-->
<!--            <t:label for="firstArgument"/>:-->
<!--            <t:select t:id="firstArgument" model="firstArguments" onchange="document.getElementById('tableFilterSubmit').click()" secure="never"/>-->
<!--        </div>-->

<!--        <div class="form-group">-->
<!--            <t:label for="secondArgument"/>:-->
<!--            <t:select t:id="secondArgument" model="lastInitials" onchange="document.getElementById('tableFilterSubmit').click()" secure="never"/>-->
<!--        </div>-->

        <div class="form-group row mb-2">
            <t:label for="eventType" class="form-label col-form-label w-auto"/>
            <t:select t:id="eventType" model="eventTypes" value="filterEventType" onchange="document.getElementById('tableFilterSubmit').click()" secure="never" class="col-1"/>
        </div>

        <div class="form-group">
            <t:submit t:id="tableFilterSubmit" id="tableFilterSubmit" style="display: none;"/>
        </div>
    </t:form>

    <t:zone t:id="tablezone" id="tablezone">
        <t:grid source="eventSource" row="eventrow" model="tableModel" rowsPerPage="${rowsperpage}" pagerPosition="bottom" inplace="true">
            <p:firstArgumentPreferredNameCell>
                <a href="https://www.ncbi.nlm.nih.gov/gene/${eventrow.firstargumentgeneid}" target="_blank" data-toggle="tooltip" data-placement="top" title="Open gene ID ${eventrow.firstargumentgeneid} in NCBI Gene">${eventrow.firstArgumentPreferredName}</a>
            </p:firstArgumentPreferredNameCell>
            <p:secondArgumentPreferredNameCell>
                <a href="https://www.ncbi.nlm.nih.gov/gene/${eventrow.secondargumentgeneid}" target="_blank" data-toggle="tooltip" data-placement="top" title="Open gene ID ${eventrow.secondargumentgeneid} in NCBI Gene">${eventrow.secondArgumentPreferredName}</a>
            </p:secondArgumentPreferredNameCell>
            <p:docIdCell>
                <a href="${documentUrl}" target="_blank" data-toggle="tooltip" data-placement="top" title="${articleReferenceTitle}">${eventrow.docId}</a>
            </p:docIdCell>
            <p:contextCell>
                <t:output value="${eventrow.context}" filter="false" format="contextformat"/>
            </p:contextCell>
        </t:grid>
    </t:zone>
</div>