        <t:grid source="eventSource" row="eventrow" model="tableModel" rowsPerPage="${rowsperpage}" pagerPosition="bottom" inplace="true">
            <p:firstArgumentPreferredNameCell>
                <a href="https://www.ncbi.nlm.nih.gov/gene/${eventrow.firstargumentgeneid}" target="_blank" data-toggle="tooltip" data-placement="top" title="Open gene ID ${eventrow.firstargumentgeneid} in NCBI Gene">${eventrow.firstArgumentPreferredName}</a>
            </p:firstArgumentPreferredNameCell>
            <p:secondArgumentPreferredNameCell>
                <a href="https://www.ncbi.nlm.nih.gov/gene/${eventrow.secondargumentgeneid}" target="_blank" data-toggle="tooltip" data-placement="top" title="Open gene ID ${eventrow.secondargumentgeneid} in NCBI Gene">${eventrow.secondArgumentPreferredName}</a>
            </p:secondArgumentPreferredNameCell>
            <p:docIdCell>
                <a href="${documentUrl}" target="_blank" data-toggle="tooltip" data-placement="top" title="${articleReferenceTitle}">${eventrow.docId}</a>
            </p:docIdCell>
            <p:contextCell>
                <t:output value="${eventrow.context}" filter="false" format="contextformat"/>
            </p:contextCell>
