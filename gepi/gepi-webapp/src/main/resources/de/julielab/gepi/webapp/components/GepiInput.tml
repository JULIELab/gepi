<!DOCTYPE html>
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
    <div class="card no-outline" tabindex="0">
        <div class="card-header">
            <h4 class="text-center">
                Input Specification
            </h4>
        </div>
        <div class="card-body">
            <div id="inputcolhandle" class="background-arrow-left fade no-outline"/>
            <form role="form" t:type="form" async="true" t:id="inputform" id="inputform">
                <!-- Hidden field to store the data session ID to the client -->
                <t:textfield t:id="dataSessionIdField" value="dataSessionId" hidden="true"
                             title="Hidden field to store session information."/>
                <div class="row">
                    <div class="col-6">
                        <div class="text-center">
                            <div id="listacontainer" class="form-group">
                                <t:label for="lista">
                                    List A
                                    <span class="text-muted">required</span>
                                </t:label>
                                <t:textarea class="form-control" rows="20" t:id="lista" id="lista"
                                            t:clientId="lista"
                                            placeholder="Provide NCBI Gene IDs, one per line. You may also select a file with appropriate IDs using the button below."
                                            value="listatextareavalue">
                                </t:textarea>
                            </div>
                            <div class="btn-group">
                                <label class="btn btn-primary">
                                    Select File
                                    <input type="file" style="display:none" id="fileainput"/>
                                </label>
                                <button type="button" class="btn btn-primary" id="cleara">Clear</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 text-center">
                        <div id="listbdiv" data-toggle="tooltip"
                             title="List B becomes available as soon as some IDs have been added to List A. All one-list operations are performed using List A.">
                            <div id="listbcontainer" class="form-group">
                                <t:label for="listb">
                                    List B
                                    <span class="text-muted">optional</span>
                                </t:label>
                                <t:textarea class="form-control" rows="20" t:id="listb" id="listb"
                                            placeholder="Becomes available when List A is not empty. Copy in your second list of IDs here or use the upload function."
                                            value="listbtextareavalue">
                                </t:textarea>
                            </div>
                            <div class="btn-group">
                                <label class="btn btn-primary" id="filebbtn">
                                    Select File
                                    <input type="file" style="display:none" id="filebinput"/>
                                </label>
                                <button type="button" class="btn btn-primary" id="clearb">Clear</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <hr class=""/>
                    <div id="eventtypediv" class="col-12">
                        <h5>Restrict event retrieval to the following event types.
                        </h5>
                        <t:checklist t:id="eventtypes" selected="selectedeventtypes" encoder="eventtypeencoder"
                                     model="eventtypemodel" class="testclass" t:t-checklist-row="testzeugs"/>
                    </div>
                </div>
                <div class="row mt-3">
                    <hr class=""/>
                    <div class="col-12">
                        <h5>Enter words to filter the sentences in which returned events occur.</h5>
                        <t:TextField t:id="sentencefilter" value="sentencefilterstring"/>
                    </div>
                </div>
                <div class="row mt-3">
                    <hr class=""/>
                    <div class="col-12">
                        <h5>Enter words to filter the paragraphs in which returned events occur.</h5>
                        <t:TextField t:id="paragraphfilter" value="paragraphfilterstring"/>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <div>
                            Keyword Operator
                            <t:RadioGroup t:id="kwgroup" value="filterFieldsConnectionOperator">
                                <div class="form-check form-check-inline">
                                    <t:Radio t:id="and" id="and" class="form-check-input" type="radio"
                                             value="literal:AND"
                                             label="AND"/>
                                    <t:label for="and" class="form-check-label"/>
                                </div>
                                <div class="form-check form-check-inline">
                                    <t:Radio t:id="or" class="form-check-input" id="or" type="radio"
                                             value="literal:OR"
                                             label="OR"/>
                                    <t:label for="or" class="form-check-label"/>
                                </div>
                            </t:RadioGroup>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <hr class=""/>
                    <h5>Section name filter</h5>
                    <div class="col-12">
                        <t:TextField t:id="sectionnamefilter" value="sectionnamefilterstring" />
                    </div>
                </div>
                <div class="row mt-3">
                    <hr class="medium bottom top"/>
                    <div class="col-12 text-center">
                        <t:submit class="btn btn-primary btn-block" value="Go!"/>
                    </div>
                </div>
                <t:errors globalOnly="false"/>
            </form>
        </div>
    </div>
</t:container>