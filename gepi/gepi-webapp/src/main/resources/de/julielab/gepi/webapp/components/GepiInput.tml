<!DOCTYPE html>
<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
	<div class="panel panel-default">
		<div class="panel-heading text-center">
			Input Specification
			<span class="glyphicon glyphicon-pencil"></span>
		</div>
		<div class="panel-body">
				<form role="form" t:type="form" async="true" t:id="inputform" >
					<div class="row">
						<div class="col-md-6">
							<div class="text-center">
								<div class="form-group">
									<t:label for="lista">
										List A
										<span class="text-muted">required</span>
									</t:label>
									<t:textarea class="form-control" rows="20" t:id="lista" t:clientId="lista"
										placeholder="Provide NCBI Gene IDs, one per line. You may also select a file with appropriate IDs using the button below."
										value="listatextareavalue">
									</t:textarea>
								</div>
								<div class="btn-group">
									<label class="btn btn-primary">
										Select File
										<input type="file" style="display:none" id="fileainput" />
									</label>
									<button type="button" class="btn btn-primary" id="cleara">Clear</button>
								</div>
							</div>
<!-- 							<div id="listaoptions"> -->
<!-- 								<div class="radio"> -->
<!-- 									<label data-toggle="tooltip" -->
<!-- 										title="Return interactions within elements of List A"> -->
<!-- 										<input type="radio" name="interactiontarget" checked="true" /> -->
<!-- 										Interactions Within -->
<!-- 									</label> -->
<!-- 								</div> -->
<!-- 								<div class="radio"> -->
<!-- 									<label data-toggle="tooltip" -->
<!-- 										title="Return interactions between elements of List A and any other genes / proteins"> -->
<!-- 										<input type="radio" name="interactiontarget" /> -->
<!-- 										Interactions Outside -->
<!-- 									</label> -->
<!-- 								</div> -->
<!-- 							</div> -->
						</div>
						<div class="col-md-6 text-center">
							<div id="listbdiv" data-toggle="tooltip"
								title="List B becomes available as soon as some IDs have been added to List A. All one-list operations are performed using List A.">
								<div class="form-group">
									<t:label for="listb">
										List B
										<span class="text-muted">optional</span>
									</t:label>
									<t:textarea class="form-control" rows="20" t:id="listb"
										placeholder="Becomes available when List A is not empty. Copy in your second list of IDs here or use the upload function."
										value="listbtextareavalue">
									</t:textarea>
								</div>
								<div class="btn-group">
									<label class="btn btn-primary" id="filebbtn">
										Select File
										<input type="file" style="display:none" id="filebinput" />
									</label>
									<button type="button" class="btn btn-primary" id="clearb">Clear</button>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<hr />
						<div class="col-md-12 text-center">
							<t:submit class="btn btn-primary btn-block" value="Go!" />
						</div>
					</div>
					<t:errors globalOnly="false" />
				</form>
		</div>
	</div>
</t:container>