<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{80} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="tapestry.events" level="INFO" />
  <logger name="tapestry.transformer" level="INFO" />
  <logger name="org.apache.tapestry5" level="INFO"/>
  
  <logger name="de.julielab.gepi.webapp.components.GepiInput" level="DEBUG"/>
  <logger name="de.julielab.gepi.core.services.GepiCoreModule.IEventRetrievalService" level="TRACE"/>
<!--   <logger name="de.julielab.gepi.core.services.GepiCoreModule.IEventPostProcessingService" level="TRACE"/> -->
<logger
		name="de.julielab.elastic.query.services.ElasticQueryComponentsModule.ISearchServerComponent"
		level="INFO" />

  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>